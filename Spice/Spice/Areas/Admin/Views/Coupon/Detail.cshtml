@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-info">@Model.Name Detail</h1>
@{ 
    string base64String = Convert.ToBase64String(Model.CouponImage);
    var image = string.Format($"data:image/jpg;base64,{base64String}");
}
<div class="border">
    <img src="@image" alt="Coupon Image" width="100%" height="100%"/>
</div>
<main class="search_background_white row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input readonly asp-for="Name" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <select
                        disabled
                        asp-for="CouponType"
                        asp-items="Html.GetEnumSelectList<Coupon.Coupon_Enum>()"
                        class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input readonly asp-for="Discount" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input readonly asp-for="MinimumAmount" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="isCouponActive" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input readonly type="checkbox" asp-for="isCouponActive" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <a asp-action="Index">Index</a>
            </div>
            <div class="col-6">
                <a asp-action="Edit" class="btn btn-block btn-info" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
    </div>
</main>

