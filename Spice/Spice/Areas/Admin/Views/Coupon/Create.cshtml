@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-info">Create Coupon</h1>
<main class="search_background_white row">
    <div class="col-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <select
                            asp-for="CouponType"
                            asp-items="Html.GetEnumSelectList<Coupon.Coupon_Enum>()"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Discount" class="form-control"/>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MinimumAmount" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MinimumAmount" class="form-control"/>
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CouponImage" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="file" name="files" multiple class="form-control" id="couponImage"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="isCouponActive" class="col-form-label"></label>
                </div>
                <div class="col-1">
                    <input type="checkbox" asp-for="isCouponActive" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <a asp-action="Index">Go Back</a>
                </div>
                <div class="col-6">
                    <input type="submit" value="Create" class="btn btn-primary btn-block"/>
                </div>
            </div>
        </form>
    </div>
</main>

