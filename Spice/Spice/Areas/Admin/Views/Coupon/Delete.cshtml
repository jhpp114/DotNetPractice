@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-danger">Delete Coupon @Model.Name</h1>
@{
    string dataString64 = Convert.ToBase64String(Model.CouponImage);
    var imageData = string.Format($"data:image/jpg;base64,{dataString64}");
}
<main class="search_background_white row">
    <div class="col-8">
        <form asp-action="Delete" method="post">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input readonly asp-for="Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <select
                            disabled
                            asp-for="CouponType"
                            asp-items="Html.GetEnumSelectList<Coupon.Coupon_Enum>()"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input readonly asp-for="Discount" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MinimumAmount" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input readonly asp-for="MinimumAmount" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CouponImage" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <img class="form-control" src="@imageData" alt="Coupon Image" width="100%" height="100%"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="isCouponActive" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input readonly type="checkbox" asp-for="isCouponActive" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <a asp-action="Index">Go Back</a>
                </div>
                <div class="col-6">
                    <input type="submit" value="Delete" class="btn btn-danger btn-block" asp-route-id="@Model.Id"/>
                </div>
            </div>
        </form>
    </div>
</main>

