@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<main class="search_background_white">
    <div class="row">
        <div class="col-6">
            <h1 class="text-info">SubCategory Index</h1>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-lg btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; CREATE</a>
        </div>
    </div>
    <br />
    <main>
         @if (Model.Count() > 0) 
         { 
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th></th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td>
                            <div class="text-right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i>&nbsp;Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-question-circle"></i>&nbsp;Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
         }
         else
         {
             <p>No SubCategory Exist</p>
         }
    </main>
</main>
