@model Spice.Models.ViewModels.CategoryAndSubCategoryViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-info">Create Subcategory</h1>
<main class="search_background_white row">
    <div class="col-8 border-right">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label class="col-form-label">Category</label>
                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="SubCategory.CategoryId" asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))">
                    </select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control"/>
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <a asp-action="Index">Go Back</a>
                </div>
                <div class="col-5">
                    <input class="btn btn-primary btn-block" type="submit" value="Submit" />
                </div>
            </div>
        </form>
        
    </div>
    <div class="col-3">
        <p>Existing Subcategories...</p>
        @if (Model.SubCategoryList.Count() > 0)
        {
            <div class="subcategory_list">
                <ul class="list-group">
                </ul>
            </div>
        } else
        {
            <p>None..</p>
        }
    </div>
</main>
