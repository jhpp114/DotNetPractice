@model Spice.Models.ViewModels.MenuitemViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-danger">Delete Menuitem @Model.MenuItem.Name</h1>
<main class="search_background_white row">
    <div class="col-8">
        <form asp-action="Delete" method="post">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MenuItem.Name" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.Description" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <textarea asp-for="MenuItem.Description" readonly class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.Price" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MenuItem.Price" readonly class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input  asp-for="MenuItem.SubCategory.Name" readonly class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <select
                            disabled
                            asp-for="MenuItem.Spicyness"
                            asp-items="Html.GetEnumSelectList<MenuItem.Spicy_Enum>()"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <a asp-action="Index">Go Back</a>
                </div>
                <div class="col-6">
                    <input asp-route-id="@Model.MenuItem.Id" class="btn btn-danger btn-block" type="submit" value="Delete"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        <img src="@Model.MenuItem.Image" alt="Food Image" width="100%" style="border: 1px solid black; border-radius: 1rem;"/>
    </div>
</main>

