@page
@model BookListRazor.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Create New Book</h1>
<div class="container border">
    <br />
    <form method="post" class="pd-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Book_Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.Book_Name" />
            </div>
            <span asp-validation-for="Book.Book_Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.Author"/>
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.ISBN"/>
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <a asp-page="Index">Go Back</a>
            </div>
            <div class="col-6">
                <input class="btn btn-block btn-primary" type="submit" value="POST" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

